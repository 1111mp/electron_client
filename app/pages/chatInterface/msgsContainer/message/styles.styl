.message-wrapper
  margin-bottom 16px
	.iconicon_alert
		margin 12px 12px 0 0
		color red
	.iconfont-group
		margin 34px 12px 0 0
	.message-avatar
		width 40px
		height 40px
		margin-right 14px
		border-radius 50%
		background-color #4F4F54
		box-shadow 0px 1px 3px 0px rgba(0, 0, 0, 0.2)
		background-position center
		background-repeat no-repeat
		background-size cover
		// background-image url('../../../images/image_default_avatar@2x.png')
	.message-container
		max-width 68%
		.user_name
			display inline-block
			margin-bottom 6px
			font-size 12px
			font-weight 400
			color rgba(255,255,255,.4)
		.message-content
			// flex 1
			// max-width 68%
			position relative
			padding 8px 12px
			border-radius 6px
			font-size 14px
			line-height 24px
			color #1b1b1b
			background-color #e9e9e9
			box-shadow 0px 2px 2px 0px rgba(0, 0, 0, 0.1)
			user-select text
			word-break break-word
			.message-link
				color rgba(255,209,100,.8)
				&:hover
					color rgba(255,209,100,1)
			&::before
				content ''
				position absolute
				top 14px
				right 100%
				border 6px solid transparent
				border-right-color #e9e9e9
	&.left
		flexBox()
		.message-container
			flexBox(direction: column)
			.message-content
				align-self flex-start
				&::before
					border-bottom-color #e9e9e9
					transform rotate(-90deg)
	&.right
		flexBox(justify:flex-end)
		.message-avatar
			margin-right 0
			margin-left 14px
		.message-container
			flexBox(direction: column)
			.user_name
				align-self flex-end
			.message-content
        align-self flex-end
        background-color #396ee5
        color #ffffff
        &::before
          content ''
          position absolute
          top 14px
          left 100%
          border 6px solid transparent
          border-left-color #396ee5
          border-bottom-color #396ee5
          transform rotate(90deg)
	.message-image-content
		padding 8px!important
		line-height 0!important
.message-wrapper:last-child
  margin-bottom 0
