$themeColor = #3478f6;

$color-gray-05= #e9e9e9;
$color-gray-90= #1b1b1b;

light-theme()
  {block}

dark-theme() {
  :global(.dark-theme) & {
    {block}
  }
}

popper-shadow()
  box-shadow 0px 8px 20px rgba(0, 0, 0, 0.3), 0px 0px 8px rgba(0, 0, 0, 0.05)

flexBox(direction = row, justify = flex-start, align = flex-start) {
  display: flex;
  flex-direction: direction;
  justify-content: justify;
  align-items: align;
}


